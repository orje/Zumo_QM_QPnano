     <entry>uint8_t l, r, s;
uint16_t v;

proxSensors.read();
l = proxSensors.countsFrontWithLeftLeds();
r = proxSensors.countsFrontWithRightLeds();

s = (l + r) / 2U;
v = 400U - (s * 400U / 6U);

me-&gt;leftSpeed = v;
me-&gt;rightSpeed = v;

